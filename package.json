{
  "name": "digital-signage",
  "version": "0.0.1",
  "description": "A simple digital signage software",
  "homepage": "https://tcstenungsund.github.io/digital-signage-fork/",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": " npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "build": "tsc && vite build",
    "start": "npm run dev",
    "start-remote": "vite --host"
  },
  "author": "klovaaxel",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.0.0-beta.82",
    "@vaadin/router": "^1.7.4",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "firebase": "^9.19.1",
    "firebaseui": "^6.0.2",
    "lit": "^2.3.1",
    "web-push": "^3.5.0",
    "workbox-build": "^6.5.2",
    "workbox-core": "^6.5.2",
    "workbox-precaching": "^6.5.2"
  },
  "devDependencies": {
    "typescript": "^4.6.3",
    "vite": "^2.9.0",
    "vite-plugin-pwa": "^0.11.13"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
